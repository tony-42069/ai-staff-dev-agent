from setuptools import setup, find_packages

setup(
    name="{{ project_name }}",
    version="{{ version }}",
    author="{{ author }}",
    author_email="{{ email }}",
    description="A Python package generated by AI Staff Development Agent",
    long_description=open("README.md").read(),
    long_description_content_type="text/markdown",
    url="https://github.com/yourusername/{{ project_name }}",
    packages=find_packages(where="src"),
    package_dir={"": "src"},
    classifiers={{ classifiers | tojson }},
    python_requires="{{ python_version }}",
    install_requires=open("requirements.txt").read().splitlines(),
    keywords={{ keywords | tojson }},
    project_urls={
        "Documentation": "https://yourusername.github.io/{{ project_name }}",
        "Source": "https://github.com/yourusername/{{ project_name }}",
        "Issues": "https://github.com/yourusername/{{ project_name }}/issues",
    },
    include_package_data=True,
    zip_safe=False,
)
